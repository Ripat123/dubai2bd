<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="Theme.Ecommerce.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/normDark</item>
    </style>

    <style name="Theme.Ecommerce.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <!--        <item name="titleTextColor">@color/main_color</item>-->
        <item name="android:background">@color/white</item>
    </style>


    <style name="Theme.Ecommerce.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="search_back" parent="ThemeOverlay.AppCompat">
        <item name="android:background">#EFEFEF</item>
    </style>

    <style name="app_back" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/material_on_background_disabled</item>
    </style>

    <style name="card" parent="CardView">
        <item name="android:background">#EFEFEF</item>
    </style>

    <style name="Theme.Ecommerce.Fullscreen" parent="Theme.Ecommerce">
        <item name="android:actionBarStyle">@style/Widget.Theme.Ecommerce.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Ecommerce.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="card_main" parent="CardView">
        <item name="android:background">@color/white</item>
    </style>



